/* pages/me/me.wxss */
.favor-review{
  text-align: center;
  line-height: 72rpx;
  font-size: 28rpx;
  opacity: 0.8;
  color: #F9A800;
}

.favor-block{
  position: absolute;
  left: 0;
  right: 0;
  top: 72rpx;
  bottom: 100rpx;
  padding-bottom: 30rpx;
}

.favor-card{
  display: flex;
  margin: 36rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.08);
  border-radius: 10rpx;
}

.movie-image{
  width: 180rpx;
  height: 180rpx;
}

.text-card{
  margin: 24rpx;
}

.movie-name{
  font-size: 32rpx;
  font-weight: bold;
}

.review-text{
  margin-top: 12rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  opacity: 0.9; 
}

.user-info{
  display: flex;
  margin-top: 12rpx;
}

.user-image{
  flex-shrink: 0;
  height: 50rpx;
  width: 50rpx;
  background: #F5E069;
  border-radius: 50%;
}

.user-name{
  line-height: 50rpx;
  width: 240rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 12rpx;
  font-size: 24rpx;
  opacity: 0.6;
}

.back-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 100rpx; 
}