<!--pages/home/home.wxml-->
<navigator class='hot-card' url="/pages/detail/detail?movieId={{movieDetail._id}}">
  <image class='hot-image' src='{{movieDetail.image}}' mode='widthFix'></image>
  <view class='movie-name' >{{movieDetail.name}}</view>
</navigator>

<view class="user-info" wx:if="{{ reviewLength === 0 }}" bindtap="onTapDetail">
  <user user-image="{{reviewUser.avatar}}" user-name="{{reviewUser.username}}"></user>
  <view class="review-text">给你推荐了一部电影</view>
</view>

<view class="nav-card">
  <view class='hot-entry' bindtap='onTapHot'>
    <image class='btn-img' src='/images/image.png'></image>
    <view class="hot-btn">热门</view>
  </view>
  <view class='me-entry' bindtap='onTapMe'>
    <image class='btn-img' src='/images/image.png'></image>
    <view class="me-btn">我的</view>
  </view>
</view>
