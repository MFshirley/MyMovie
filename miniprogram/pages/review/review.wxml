<!--pages/review/review.wxml-->
<view class="bg"></view>
<movie movie-name='{{movie.name}}' movie-image='{{movie.image}}'></movie>
<view class="user-info">
  <user user-image="{{reviewList.image}}" user-name="{{reviewList.name}}"></user>
  <view class="review-text">的影评</view>
</view>
<view class="review-content" maxlength="255">{{reviewList.content}}</view>

<view class='review-card'>
  <view class='review-btn'>
    <image class='btn-img' src='/images/image.png'></image>
    <text class='btn-text'>收藏影评</text>
  </view>
  <view class='review-btn'>
    <image class='btn-img' src='/images/image.png'></image>
    <text class='btn-text'>写影评</text>
  </view>
</view>

